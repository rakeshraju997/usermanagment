    <body class="text-basetext">
        {{#if loginPage}}
        <nav class="navbar navbar-expand-lg navbar-light border-bottom">
            <div class="container-fluid">
                {{!-- <a class="navbar-brand" href="#">Navbar</a> --}}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                {{#each logineduser}}
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-5  ">
                        <li class="nav-item">
                            <a class="nav-link text-basetext active" aria-current="page" href="/{{this.role}}/userlist">
                                <i class="bi bi-people"></i>
                                People
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-basetext" aria-current="page" href="/{{this.role}}/templatelist">
                                <i class="bi bi-hdd-stack p-2"></i>
                                Template
                            </a>
                        </li>
                    </ul>
                    <span class="row w-25 align-right nav-item dropdown">
                        <span class="col w-12 p-2 d-flex align-items-center justify-content-center">
                            <i class="bi bi-bell"></i>
                        </span>
                        <div
                            class="profiletext bg-secondary bg-opacity-25 rounded  text-secondary fs-6 d-flex align-items-center justify-content-center fw-semibold">
                            <span>RR</span>
                        </div>
                        <span class="col-8" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            <span>
                                <span class="d-block fs-6">{{this.first_name}} {{this.last_name}}</span>
                                <span class="d-block text-capitalize fs-7">{{this.role}}</span>
                            </span>
                        </span>
                        <div class="dropdown-menu w-25 mt-2">
                            <a class="dropdown-item text-basetext" href="/logout">Logout</a>
                        </div>
                        {{/each}}
                    </span>
                </div>
            </div>
        </nav>
        {{/if}}

        <div class="container pt-5 pb-5">
            {{{body}}}
        </div>
